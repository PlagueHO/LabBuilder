            )
          Reservations = @(
              @{ Name = 'ALPHA-DC1';
                 ScopeID = '192.168.128.0';
                 ClientMACAddress = '000000000000';
                 IPAddress = '192.168.128.10';
                 AddressFamily = 'IPv4'
              },
              @{ Name = 'ALPHA-DHCP1';
                 ScopeID = '192.168.128.0';
                 ClientMACAddress = '000000000002';
                 IPAddress = '192.168.128.16';
                 AddressFamily = 'IPv4'
              },
              @{ Name = 'ALPHA-ROOTCA';
                 ScopeID = '192.168.128.0';
                 ClientMACAddress = '000000000003';
                 IPAddress = '192.168.128.17';
