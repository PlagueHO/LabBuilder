      <adapters>
        <adapter name="Domain Private Alpha"
                 switchname="Domain Private Alpha">
          <ipv4 address="192.168.128.16"
                defaultgateway="192.168.128.19"
                subnetmask="24"
                dnsserver="192.168.128.10"/>
          <ipv6 address="fd53:ccc5:895a:bc00::10"
